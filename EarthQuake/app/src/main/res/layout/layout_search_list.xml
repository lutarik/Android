<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_terremoto"
        android:contentDescription="@string/img_contenido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_terremoto"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_terremoto"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_fecha"
        android:layout_below="@+id/lbl_terremoto"
        android:layout_toEndOf="@+id/img_terremoto"
        android:textSize="20sp" />

</RelativeLayout>