<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:name="com.dccs.earthquake.fragments.BusquedaFragment"
        android:id="@+id/frag_busqueda"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <fragment
        android:layout_width="523dp"
        android:layout_height="match_parent"
        android:name="com.dccs.earthquake.fragments.BusquedaDetalleFragment"
        android:id="@+id/frag_busqueda_detalle"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/frag_busqueda" />
</RelativeLayout>